<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <title>User Profile</title>
  <link rel="stylesheet" href="user-profile.css">
  <link rel="stylesheet" href = "partials/navbar.css">
  <link rel="stylesheet" href = "/product-catalog.css">
</head>

<body>

  {{> _header }}

  <div id="overlay"></div>

  <header>
    <!--add photo here-->
  </header>

  <div class="profile-container">
    <div id="profile-picture">
      <img src="./images/filler-icon.jpg" alt="Profile Picture">
    </div>
    <h1>Hi, <span>{{user.firstName}}</span></h1>
    <p>What would you like to get started on today?</p>
  </div>

  <div class="registered-cars">
    <h2>Registered Cars</h2>
    <hr>
    {{#each vehicles}}
      <div class="car" carDetails = {{this.classification}}-{{this.plateNumber}}>
        <img src="/images/vehicleClassification/{{this.classification}}.jpeg" alt="Vehicle Classification Image">
        <div class="car-status">
            <div class="car-info">
              <p class="car-text">Status:</p>
              {{#if (eq this.status 'To Review')}}
              <p class="reviewBtn status" data-plate-number="{{this.plateNumber}}" data-last-service="{{this.lastService}}" style="cursor:pointer;">{{this.status}}</p>
              {{else}}
                {{#if (eq this.status 'Pending:')}}
                  <p class="status" data-last-service="{{this.lastService}}">{{this.status}} {{this.lastService}}</p>
                {{else}}
                  <p class="status">{{this.status}}</p>
                {{/if}}
              {{/if}}
            </div>
            <div class="car-info">
              <p class="car-text">Plate Number:</p>
              <p class="status">{{this.plateNumber}}</p>
            </div>
        </div>
      </div>
      <hr>
    {{/each}}
    <button id="add">
      <img id="addPhoto" src="/images/add.png">
    </button>
    <div id="addCarPopup" class="popupContainer">
      <div class="popupContent">
        <span id="closePopup" class="closePopup">&times;</span>
        <h1>Add a Car</h1>
          <form id="addCarForm">
            <label for="classType">Classification</label><br>
            <select id="classType" name="classType">
            <option value="" disabled selected>Select Class Type</option>
            {{#each vehicleClassifications}}
              <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
            </select><br>
            <label for="carBrand">Brand</label>
            <input type="text" id="carBrand" name="carBrand">
            <label for="plateNumber">Plate Number (3 Digits, 3 Letters, 4 Digits)</label>
            <input type="text" id="plateNumber" name="plateNumber">
            <input type="hidden" name="userId" value="{{user._id}}" id="userId">
            <p id="addcar-error-message" style="color: rgb(255, 72, 72) !important"></p>
            <button type="submit">Submit</button>
          </form>
        </div>
      </div>
  </div>

  <div id="products" class="active-subscriptions">
    <h2>Product Orders</h2>
    <hr>
    {{#each filteredReceipts}}
      <p class="txn-header"><strong>Transaction No. </strong>{{this._id}}</p>
      {{#each this.products}}
        <div class="userDashboardProduct">
          <img src="/images/products/{{this.name}}.png" />
          <div class="order-details" id="order-{{../this._id}}">
            <p><strong>Name:</strong> <span id="product-name">{{this.name}}</span></p>
            <p><strong>Quantity:</strong> <span id="product-quantity">x{{this.quantity}}</span></p>
            <p><strong>Total Price:</strong> <span id="product-price">&euro; {{this.price}}</span></p>
          </div>
        </div>
      {{/each}}
      <hr>
    {{/each}}
  </div>
 
  <!-- Error Popup -->
  <div id="errorPopup" class="miniPopupContainer" style="display: none;">
    <div class="popupContent">
      <span id="closePopupError" class="closePopup">&times;</span>
      <h3 style="color: azure;">There seems to be a problem</h3>
      <p id="errorText" style="color: azure;"></p>
    </div>
  </div>

  <!-- Success Popup -->
  <div id="successPopup" class="miniPopupContainer" style="display: none;">
    <div class="popupContent">
      <span id="closePopupSuccess" class="closePopup">&times;</span>
      <h3 style="color: azure;">Success</h3>
      <p id="successText" style="color: azure;"></p>
    </div>
  </div>

  <div id="confirmPopup" class="miniPopupContainer" style="display: none;">
    <div class="popupContent">
      <span id="closePopupConfirm" class="closePopup">&times;</span>
      <h3 style="color: azure;">Action Required</h3>
      <p id="confirmText" style="color: azure;">Do you agree that the vehicle details are correct and owned by you. Do you still want to proceed to add this to your vehicle?</p>
      <button id="confirmButton">Yes</button>
      <button id="cancelButton">No</button>
    </div>
  </div>

  <!-- {{!-- Leave a Review Popup --}} -->
  <div id="reviewPopup" class="popupContainer">
      <div class="popupContent">
        <span id="closeReviewPopup" class="closePopup">&times;</span>
        <h1 id="reviewHeader"></h1>
          <form id="reviewForm">
            <label for="rating">Rating</label>
            <div class="star-rating" id="starRating">
              <button class="star" data-rating="1">&#9733;</button>
              <button class="star" data-rating="2">&#9733;</button>
              <button class="star" data-rating="3">&#9733;</button>
              <button class="star" data-rating="4">&#9733;</button>
              <button class="star" data-rating="5">&#9733;</button>
            </div>
            <input type="hidden" name="rating" id="ratingInput" value="">
            <input type="hidden" name="serviceName" id="serviceName" value="">
            <input type="hidden" name="vehiclePlateNum" id="reviewPlateNum" value="">

            <label for="reviewText"></label>
            <input type="text" id="reviewText" name="reviewText" placeholder="Leave your review here..." maxlength="250">
            <p id="error-message" style="color: rgb(255, 72, 72) !important;display: flex;"></p>
            <button type="submit">Submit</button>
          </form>
        </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  {{!-- <script src="add-car.js"></script>
  <script src="view-token.js"></script> --}}
  <script src="/js/registerVehicle.js"></script>
  <script src="/js/availService.js"></script>
  <script src="/js/useSubscription.js"></script>
  <script src="/js/logout.js"></script>
  <script src="/js/reviewDashboard.js"></script>
</body>

</html>