<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subscriptions</title>
    <link rel="stylesheet" href="/partials/navbar.css">
    <link rel="stylesheet" href="/featured.css">
    <link rel="stylesheet" href="/book-appointment.css">
    <link rel="stylesheet" href="/cart.css">
</head>
<body>
    {{> _header }}

    <div id="overlay"></div>

    <header>Subscriptions</header>

    <div class="top-container">
        {{#each subscriptions}}
            <div class="top-item">
                <img src="/images/subscriptions/{{subscription.photo}}" alt="Image of {{subscription.name}}">
                <p>{{subscription.name}}</p>
            </div>
        {{/each}}

        {{#if (eq user.role 'admin')}}
            <div class="top-item-add">
                <button id="add">
                    <img src="/images/add-new-sub.png">
                </button>
            </div>
        {{/if}}

        <!-- Add Subscription Popup -->
        <div id="addSubPopup" class="popupContainer">
            <div class="popupContent">
                <span id="closePopup" class="closePopup">&times;</span>
                <h1>Add a Subscription</h1>

                <form id="form">
                    <label for="name">Subscription Name</label>
                    <input type="text" id="name" name="name" required>

                    <label for="photo">Upload Image</label>
                    <input type="file" id="photo" name="photo" accept="image/*">

                    <fieldset>
                        <legend>Select Services and Input the Tokens</legend>
                        {{#each services}}
                            <label>
                                <input type="checkbox" name="selectedItems" value="{{service.name}}">
                                {{service.name}}
                                <input type="number" name="token" min="1" value="1" id="token">
                            </label>
                        {{/each}}
                    </fieldset>

                    <fieldset>
                        <legend>Select the Vehicle Classification and the Price</legend>
                        {{#each vehicleClassifications}}
                            <label>
                                <input type="checkbox" name="selectedItemsVehicleClass" value="{{vehicleClassification.name}}">
                                {{vehicleClassification.name}}
                                <input type="number" name="price" min="1" value="1" step="0.01" id="price">
                            </label>
                        {{/each}}
                    </fieldset>

                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>

        <!-- Edit Subscription Popup -->
        <div id="editSubPopup" class="popupContainer">
            <div class="popupContent">
                <span id="closePopupEdit" class="closePopup">&times;</span>
                <h1>Edit a Subscription</h1>

                <form id="formEdit">
                    <label for="nameEdit">Subscription Name</label>
                    <input type="text" id="nameEdit" name="nameEdit" required>

                    <label for="photoEdit">Upload Image</label>
                    <input type="file" id="photoEdit" name="photoEdit" accept="image/*">

                    <fieldset>
                        <legend>Select Services, Input the Price and the Tokens</legend>
                        {{#each services}}
                            <label>
                                <input type="checkbox" name="selectedItemsEdit" value="{{service.name}}" id="{{service.name}}">
                                {{service.name}}
                                <input type="number" name="tokenEdit" min="1" value="1" id="{{service.name}}">
                            </label>
                        {{/each}}
                    </fieldset>

                    <fieldset>
                        <legend>Select the Vehicle Classification and the Price</legend>
                        {{#each vehicleClassifications}}
                            <label>
                                <input type="checkbox" name="selectedItemsEditVehicleClass" value="{{vehicleClassification.name}}" id="{{vehicleClassification.name}}">
                                {{vehicleClassification.name}}
                                <input type="number" name="priceEdit" min="1" value="1" step="0.01" id="{{vehicleClassification.name}}">
                            </label>
                        {{/each}}
                    </fieldset>

                    <button type="submit">Submit</button>
                    <input type="hidden" id="subscriptionId" name="subscriptionId">
                </form>
            </div>
        </div>
    </div>

    <div class="bottom-container">
        {{#each subscriptions}}
            <div class="bottom-item">
                <img src="/images/subscriptions/{{subscription.photo}}" alt="Image for {{subscription.name}}">
                <div class="bottom-item-content">
                    <h2>{{subscription.name}}</h2>
                    <h3>{{subscription.description}}</h3>

                    {{#if user}}
                      {{#if (eq user.role 'admin')}}
                          <div class="buttons-container">
                              <button id="subscriptionEditBtn" class="edit-btn" type="button" data-id="{{subscription._id}}">Edit</button>
                              <button id="subscriptionDeleteBtn" class="delete-btn" type="button" data-id="{{subscription._id}}">Delete</button>
                          </div>
                      {{else}}
                          <div class="buttons-container">
                              <button id="subscriptionGoToPayment" class="edit-btn" type="button" onclick="showSubscriptionPopup('{{subscription._id}}', '{{user._id}}', '{{subscription.name}}', '{{subscription.description}}')">Purchase</button>
                          </div>
                      {{/if}}
                    {{else}}
                        <div class="buttons-container">
                            <button id="subscriptionAddToCartNoUser" class="edit-btn" type="button" onclick="showErrorNotLoggedIn()">Purchase</button>
                        </div>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>

    <!-- Booking Popup -->
    {{#if (eq user.role 'user')}}
    <div id="bookingPopup" class="popupContainer">
        <form id="availSubscriptionForm">
            <span class="closePopup" onclick="closePopupSubscriptionSelectVehicle()">&times;</span>
            <h2>Registered Vehicles</h2>
            <hr id="generateVehicleSubscriptions">
            <!-- Add your content here -->
        </form>
    </div>
    {{/if}}

    
  {{#if user}}
    {{#if (eq user.role 'admin')}}
        <script src="/js/addSubscription.js"></script>
    {{else if (eq user.role 'user')}}
        <script src="https://js.stripe.com/v3/"></script>
        <script src="/js/availSubscription.js"></script>
    {{/if}}
  {{else}}
      <script src="/js/errorNotLoggedIn.js"></script>
  {{/if}}
</body>
</html>
