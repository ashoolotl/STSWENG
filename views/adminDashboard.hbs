<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Admin Profile</title>
    <link rel="stylesheet" href="user-profile-admin-booking.css">
    <link rel="stylesheet" href="update-status.css">
    <link rel="stylesheet" href = "partials/navbar.css">

</head>

<body>
    <script src="update-status.js"></script>

    {{> _header }}

    <div id="overlay"></div>

    <header>
        <!--add photo here-->
    </header>

    <div class="profile-container">
        <div id="profile-picture">
            <img src="./images/filler-icon.jpg" alt="Profile Picture">
        </div>

        <h1>Hi, <span>Pedro</span></h1>
        <p>What would you like to get started on today?</p>
    </div>

    <div class="registered-cars">
        <h2>Bookings</h2>

        <!-- Sorting dropdowns -->
        <div>
            <label for="order-date-select">Sort by:</label>
            <select id="order-date-select" onchange="sortBookings()">
                <option value="order-date">Order Date</option>
                <option value="status">Status</option>
            </select>
        </div>

        <!-- Car details -->
        <hr>
        <div class="car">
            <img src="./images/sedan.png">
            <div class="car-status">
                <div class="car-info">
                    <p class="car-text"><strong>Order Date:</strong> 2024-03-01</p>
                    <p class="car-text"><strong>Plate Number:</strong> XXX 1234</p>
                    <p class="car-text"><strong>Status:</strong> <span class="status current"
                            onclick="showForm(this)">On-going</span></p>
                    <button class="more-info-btn" onclick="showMoreInfo(this)">More Information</button>
                    <!-- More Info Popup -->
                    <div class="popupContainer">
                        <div class="popupContent">
                            <span class="closePopup" onclick="closeMoreInfoPopup(this)">&times;</span>
                            <div class="info-item">
                                <label for="booking-date">Booking Date:</label>
                                <span id="booking-date">2024-03-01</span>
                            </div>
                            <div class="info-item">
                                <label for="wash-type">Type of Wash:</label>
                                <span id="wash-type">Hyper Wash</span>
                            </div>
                            <div class="info-item">
                                <label for="contact-number">Contact Number:</label>
                                <span id="contact-number">123-456-7890</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr>
        <div class="car">
            <img src="./images/sedan.png">
            <div class="car-status">
                <div class="car-info">
                    <p class="car-text"><strong>Order Date:</strong> 2023-03-02</p>
                    <p class="car-text"><strong>Plate Number:</strong> XXX 4567</p>
                    <p class="car-text"><strong>Status:</strong> <span class="status current"
                            onclick="showForm(this)">Rejected</span></p>
                    <button class="more-info-btn" onclick="showMoreInfo(this)">More Information</button>
                    <!-- More Info Popup -->
                    <div class="popupContainer">
                        <div class="popupContent">
                            <span class="closePopup" onclick="closeMoreInfoPopup(this)">&times;</span>
                            <div class="info-item">
                                <label for="booking-date">Booking Date:</label>
                                <span id="booking-date">2024-03-02</span>
                            </div>
                            <div class="info-item">
                                <label for="wash-type">Type of Wash:</label>
                                <span id="wash-type">Master Wash</span>
                            </div>
                            <div class="info-item">
                                <label for="contact-number">Contact Number:</label>
                                <span id="contact-number">987-654-3210</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr>

        <div class="car">
            <img src="./images/sedan.png">
            <div class="car-status">
                <div class="car-info">
                    <p class="car-text"><strong>Order Date:</strong> 2024-03-03</p>
                    <p class="car-text"><strong>Plate Number:</strong> XXX 7890</p>
                    <p class="car-text"><strong>Status:</strong> <span class="status current"
                            onclick="showForm(this)">Accepted</span></p>
                    <button class="more-info-btn" onclick="showMoreInfo(this)">More Information</button>
                    <!-- More Info Popup -->
                    <div class="popupContainer">
                        <div class="popupContent">
                            <span class="closePopup" onclick="closeMoreInfoPopup(this)">&times;</span>
                            <div class="info-item">
                                <label for="booking-date">Booking Date:</label>
                                <span id="booking-date">2024-03-03</span>
                            </div>
                            <div class="info-item">
                                <label for="wash-type">Type of Wash:</label>
                                <span id="wash-type">Express Wash</span>
                            </div>
                            <div class="info-item">
                                <label for="contact-number">Contact Number:</label>
                                <span id="contact-number">012-345-6789</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr>

    </div>

    <!-- Dropdown form for selecting status -->
    <div id="status-form" class="status-form">
        <span class="closePopup" onclick="closeForm(this)">&times;</span>
        <form id="status-change-form">
            <h2>
            <label for="status-select">Select Status</label>
            </h2>
            <select id="status-select">
                <option value="rejected">Rejected</option>
                <option value="on-going">On-going</option>
                <option value="accepted">Accepted</option>
                <option value="finished">Finished</option>
            </select>
            <button type="button" onclick="changeStatus()">Change</button>
        </form>
    </div>

    {{> _footer }}

</body>
</html>