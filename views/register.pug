extends base

block stylesheets
    link(rel='stylesheet', href='/login.css')
    link(rel='stylesheet', href='/partials/navbar.css')


block content 

    .login-container 
        h2 Register your Account 
        p3 New here? Fill in the following details 

        form
            input(type='text', name='fname', placeholder='First Name', required, onkeypress='return onlyAlphabets(event)')
            input(type='text', name='lname', placeholder='Last Name', required, onkeypress='return onlyAlphabets(event)')
            input(type='text', name='email', placeholder='Email', required)
            input(type='password', name='password', placeholder='Password', required, id='password')
            input(type='password', name='passwordConfirm', placeholder='Confirm Password', required, oninput='checkPasswordMatch()', id='passwordConfirm')
            p(id='passwordMismatch', style='display: none; color: white;') Passwords do not match

            select(name='cars' required)
                    option(value="" disabled selected) How many cars do you own?
                    option(value="1to3") 1-3
                    option(value="4to6") 4-6
                    option(value="7plus") 7+
            
            button(type='submit') Register
        p 
            |Have an Account?
            a(href='/login') Log In Here 
       

block scripts 
    script(src='/js/register.js')
