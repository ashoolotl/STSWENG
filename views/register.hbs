<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/login.css">
    <link rel="stylesheet" href="/partials/navbar.css">
</head>
<body>

<!-- Content -->
<div class="login-container">
    <h2>Register your Account</h2>
    <p>New here? Fill in the following details</p>

    <form>
        <input type="text" name="fname" placeholder="First Name" onkeypress='return onlyAlphabets(event)'>
        <input type="text" name="lname" placeholder="Last Name" onkeypress='return onlyAlphabets(event)'>
        <input type="text" name="email" placeholder="Email">
        <input type="password" name="password" placeholder="Password" id="password">
        <input type="password" name="passwordConfirm" placeholder="Confirm Password" id='passwordConfirm'>

        <select name="cars">
            <option value="" disabled selected>How many cars do you own?</option>
            <option value="1to3">1-3</option>
            <option value="4to6">4-6</option>
            <option value="7plus">7+</option>
        </select>

        <p id="error-message" style="color: white;"></p>
        <button type="submit">Register</button>
    </form>
    
    <p>Have an Account? <a href="/login">Log In Here</a></p>
</div>

<!-- Error Popup -->
  <div id="errorPopup" class="miniPopupContainer" style="display: none;">
    <div class="popupContent">
      <span id="closePopupError" class="closePopup">&times;</span>
      <h3 style="color: azure;">There seems to be a problem</h3>
      <p id="errorText" style="color: azure;"></p>
    </div>
  </div>

  <!-- Success Popup -->
  <div id="successPopup" class="miniPopupContainer" style="display: none;">
    <div class="popupContent">
      <span id="closePopupSuccess" class="closePopup">&times;</span>
      <h3 style="color: azure;">Success</h3>
      <p id="successText" style="color: azure;"></p>
    </div>
  </div>

<!-- Scripts -->
<script src="/js/register.js"></script>

</body>
</html>
